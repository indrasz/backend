// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id            String   @id @default(uuid())
  name          String
  username      String
  password      String
  nik           String
  refresh_token String?  @default(dbgenerated("null")) @db.Text
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model News {
  news_id       String      @id @default(uuid())
  title         String
  content       String
  author        String
  category      String
  thumbnail     String
  source        String
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt
}

model Destination {
  destination_id String    @id @default(uuid())
  name           String
  description    String
  location       String
  image          String
  category       String
  created_at     DateTime   @default(now())
  updated_at     DateTime   @updatedAt
}

model LetterRequest {
  request_id     String    @id @default(uuid())
  requester_name String
  requester_nik  String
  letter_type    String
  purpose        String
  status         String
  pdf_file       String?   // Field to store the path or URL of the PDF file
  submitted_at   DateTime   @default(now())
  updated_at     DateTime   @updatedAt
}
